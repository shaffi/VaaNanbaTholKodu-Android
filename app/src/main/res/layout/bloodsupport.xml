<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_user_info_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/custom_action_bar"
        layout="@layout/actionbar_bloodsupport" />



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bloodsupportnew.MainActivity"
    android:background="#FFFFFF">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:fillViewport="false"

        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/Name"
                android:layout_width="343dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textName"
                android:background="@drawable/edit_text_style"
                android:hint=" Enter Your Address"
                android:paddingLeft="5dip"
                android:inputType="text"
                android:layout_margin="5dp"
                android:textSize="15sp">

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name"
                android:text="Blood Group"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/BloodGroup"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textBlood"
                android:background="@drawable/edit_text_style"
                android:hint=" Enter Your Blood Group"
                android:inputType="text"
                android:paddingLeft="5dip"
                android:layout_margin="5dp"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/textContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BloodGroup"
                android:text="Contact Number"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/ContactNumber"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textContact"
                android:background="@drawable/edit_text_style"
                android:hint=" Enter Your Contact Number"
                android:inputType="text"
                android:paddingLeft="5dip"
                android:textSize="13sp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textAlternate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ContactNumber"
                android:text="Alternate Number"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/AlternateNumber"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textAlternate"
                android:background="@drawable/edit_text_style"
                android:hint=" Enter Your Alternate Contact Number"
                android:inputType="text"
                android:paddingLeft="5dip"
                android:layout_margin="5dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AlternateNumber"
                android:text="Address"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/Address"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/textAddress"
                android:layout_below="@+id/textAddress"
                android:background="@drawable/edit_text_style"
                android:ems="10"
                android:hint=" Enter Your Address"
                android:inputType="text"
                android:textSize="15sp"
                android:paddingLeft="5dip"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/Address1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/textAddress"
                android:layout_below="@+id/Address"
                android:background="@drawable/edit_text_style"
                android:ems="10"
                android:inputType="text"
                android:textSize="15sp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/Address2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/Address1"
                android:layout_below="@+id/Address1"
                android:background="@drawable/edit_text_style"
                android:ems="10"
                android:inputType="text"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:layout_marginBottom="50dp"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/buttonSubmit"
                android:text="Submit"
                android:layout_below="@+id/Address2"
                android:background="#2DACE2"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>
    </ScrollView>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:src="@drawable/banneradvertistment"
            android:id="@+id/imageview"

            android:layout_alignParentBottom = "true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>

</RelativeLayout>
    </LinearLayout>