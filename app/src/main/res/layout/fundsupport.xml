<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/custom_action_bar"
        layout="@layout/actionbar_fundsupport" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.fundsupport.MainActivity"
        android:background="#FFFFFF" >

        <WebView
            android:id="@+id/webView1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/textTamil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#000000"
            android:text="Tamil  "
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/textEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textTamil"
            android:background="#ea5324"
            android:text="English"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:padding="5dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/webView1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:background="#ea5324"
            android:text="Cash On Support"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTamil"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="You give money each of money will be used  One student for education / medicine used to who needs. Please give the hand will be change Peaceful  City of Nam Madurai."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/textNetBanking"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textDebitCard"
            android:background="#efefef"
            android:gravity="center"
            android:text="Net Banking"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/textDebitCard" />

        <TextView
            android:id="@+id/textPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/textPleaseContact"
            android:layout_below="@+id/textPleaseContact"
            android:gravity="center"
            android:text=" +91 96004 99994"
            android:textColor="#ea5324"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMrKali"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/textPleaseContact"
            android:layout_marginTop="21dp"
            android:layout_toLeftOf="@+id/textPhoneNumber"
            android:gravity="center"
            android:padding="10dp"
            android:text="Mr.Kali "
            android:textColor="#ea5324"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_press"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textMrKali"
            android:layout_alignBottom="@+id/textMrKali"
            android:layout_alignRight="@+id/textContent"
            android:gravity="center"
            android:padding="10dp"
            android:text=" Vice President of Vaa Nanbaa Thol Kodu  "
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textPleaseContact"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/textUnderProcessing"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Please Contact"
            android:textColor="#ea5324"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textgetMoreDetails"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textPleaseContact"
            android:layout_alignRight="@+id/textPhoneNumber"
            android:layout_below="@+id/textMrKali"
            android:gravity="center"
            android:text=" get more details"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textUnderProcessing"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="Under Processing"
            android:textColor="#ea5324"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textDebitCard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00b7e6"
            android:gravity="center"
            android:padding="10dp"
            android:text="Debit Card / Credit Card"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/textContent" />
        <TextView
            android:id="@+id/textOops"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Oops!"
            android:textColor="#ea5324"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_above="@+id/textUnderProcessing"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>
